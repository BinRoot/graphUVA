{
  "manifest_version": 2,

  "name": "UVA People Search",
  "description": "Autocomplete for UVa computing IDs & names, press 'enter' on a result to perform a search. (Ctrl+Shift+F to pull down the extension)" ,
  "version": "0.3.1.8",
  "content_scripts": [ {
    "js": [ "jquery-2.0.3.min.js", "hogan-2.0.0.js", "typeahead.min.js", "script.js"],
    "matches": [ "http://*/*", "https://*/*"]
  }],
  "browser_action": {
    "default_icon": {
        "19": "icon_19.png",
        "38": "icon_38.png"
    },
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+F",
        "chromeos": "Ctrl+Shift+F",
        "linux": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      }
    }
  },
  "permissions": [
    "tabs",
    "http://uvasear.ch/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self';",
  "icons": {
        "16": "icon_16.png",
        "48": "icon_48.png",
        "128": "icon_128.png"
  }
}
